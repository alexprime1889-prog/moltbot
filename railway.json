{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22"],
          "cmds": ["npm install -g pnpm"]
        },
        "build": {
          "cmds": ["pnpm install --frozen-lockfile", "pnpm build"]
        }
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "node dist/index.js gateway run --allow-unconfigured --port 8080 --bind 0.0.0.0",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
